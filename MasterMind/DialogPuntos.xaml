<Window 
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    x:Class="MasterMind.DialogPuntos"
    xmlns:local="clr-namespace:MasterMind"
    Title="GUARDAR RANKING JUGADORES"
    Height="226.2"
    Width="356.4"
    MinHeight="10"
    MinWidth="300"
    ResizeMode="NoResize"
    ShowInTaskbar="False"
    WindowStartupLocation="CenterOwner" 
    FocusManager.FocusedElement="{Binding ElementName=leftMarginTextBox}">

    <Grid Background="#FFB8E8E2" Margin="0,0,-5.6,-0.2">

        <Button x:Name="okButton" Content="OK" IsDefault="True" Margin="0,132,175,0" Background="#FF1AB7B0" Click="okButton_Click" />
        <Button x:Name="cancelButton" Content="Cancel" Margin="181,132,0,0" Background="#FF1AB7B0" FontSize="15" Click="cancelButton_Click"/>
        <Label Content="Nombre:" HorizontalAlignment="Left" Margin="60,43,0,0" VerticalAlignment="Top"/>
        <Label Content="Puntuación:" HorizontalAlignment="Left" Margin="46,74,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtbNombre"  HorizontalAlignment="Left" Height="23" Margin="133,46,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label x:Name="puntuacionDialog" Content="" HorizontalAlignment="Left" Margin="133,74,0,0" VerticalAlignment="Top"/>

    </Grid >
</Window>